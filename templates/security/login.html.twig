{% extends 'base.html.twig' %}

{% block title %}| Login{% endblock %}

{% block main %}

    <main>

        <section>
            <article class="login_desc">
                <h2>
                    Login !
                </h2>
            </article>
            {% if error %}

                <article class="login_error">
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                </article>

            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_default_play') }}">Logout</a>
                </div>
            {% endif %}


            <article class="login_form">

                <form method="post">
                    <label for="inputUsername">Username</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername"
                           class="form-control"
                           autocomplete="username" required autofocus>
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control"
                           autocomplete="current-password" required>


                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <a href="{{ path('app_register') }}" class="underline">Register</a>

                    <button type="submit">login</button>
                </form>
            </article>
        </section>
    </main>
{% endblock %}
